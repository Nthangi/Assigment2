<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reviewQuestions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_10"
    tools:context=".ScoreActivity">

    <TextView
        android:id="@+id/scoreDisplay"
        android:layout_width="239dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bevan_italic"
        android:text="TOTAL SCORE"
        android:textColor="#8C7F44"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reviewButton"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="12dp"
        android:text="Review Questions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedbackText" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="12dp"
        android:text="Exit App"
        app:layout_constraintStart_toEndOf="@+id/retryButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bevan_italic"
        android:text="feedback"
        android:textColor="#433921"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreDisplay" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="422dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/damion"
        android:text="TextView"
        android:textColor="#DACC91"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewButton" />

    <Button
        android:id="@+id/retryButton"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="112dp"
        android:text="RETRY"
        app:layout_constraintEnd_toStartOf="@+id/exitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>